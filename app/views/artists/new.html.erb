<div class="page">
  <div class="artist-title">新規投稿</div>
  <div class="content">
    <%= form_with model: @artist, local: true do |f| %>
      <div class="field">
        <%= f.label :artist_name, "アーティスト名" %><br />
        <%= f.text_field :artist_name %>
      </div>

      <div class="field">
        <%= f.label :image, "アーティストの画像" %><br />
        <%= f.file_field :image %>
      </div>

      <div class="actions">
        <%= f.submit "投稿する", class: :form__btn  %>
      </div>
  </div>
</div>
<% end %>
